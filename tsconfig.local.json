// This is the local tsconfig for validating the types in the @types directory
{
  "compilerOptions": {
    // General settings for code interpretation
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "types": [],
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": false,
    "rootDir": "./@types"
  },
  "include": ["./@types/**/*.d.ts"]
}


