{
  "name": "@ts-for-gir-test/language-server-validation",
  "version": "0.1.0",
  "description": "Tests for TypeScript Language Server validation of generated GIR types",
  "type": "module",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "test": "yarn generate && vitest run",
    "test:watch": "yarn generate && vitest",
    "test:dev": "vitest",
    "generate": "ts-for-gir generate Adw-1 --girDirectories ../../girs"
  },
  "keywords": [
    "typescript",
    "language-server",
    "gir",
    "testing",
    "validation"
  ],
  "author": "ts-for-gir contributors",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@ts-for-gir/cli": "workspace:^",
    "@ts-for-gir/language-server": "workspace:*",
    "vitest": "^2.1.6"
  },
  "devDependencies": {
    "@types/node": "^22.16.0",
    "typescript": "^5.8.3"
  }
}
