{
	"compilerOptions": {
		"lib": ["ESNext"],
		"types": [
			"@girs/gjs",
			"@girs/gjs/dom",
			"@girs/gio-2.0",
			"@girs/glib-2.0",
			"@girs/gtk-3.0",
			"@girs/clutter-1.0",
			"@girs/gtkclutter-1.0"
		],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"outDir": "./dist"
	},
	"files": ["main.ts"]
}
