{
  "name": "@ts-for-gir/cli",
  "version": "3.0.0-beta.8",
  "description": "Typescript .d.ts generator from GIR for gjs and node-gtk",
  "module": "lib/index.js",
  "type": "module",
  "bin": {
    "ts-for-gir": "./lib/start.js"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "start": "yarn node --max_old_space_size=9216 lib/start.js",
    "build": "yarn run lint && yarn run build:ts && yarn run chmod",
    "chmod": "chmod +x ./lib/start.js",
    "build:ts": "tsc",
    "clear": "yarn run clear:build",
    "clear:build": "rimraf ./lib",
    "watch": "yarn run build:ts -- --watch",
    "lint": "eslint . --ext .ts,.tsx --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gjsify/ts-for-gjs.git"
  },
  "author": "Pascal Garber <pascal@artandcode.studio>",
  "files": [
    "src",
    "bin",
    "lib",
    "templates"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/gjsify/ts-for-gjs/issues"
  },
  "homepage": "https://github.com/gjsify/ts-for-gjs#readme",
  "keywords": [
    "gjs",
    "typescript",
    "generate",
    "node-gtk",
    "gir",
    "gobject-introspection",
    "gnome",
    "gtk",
    "glib",
    "gobject",
    "dts",
    "type definitions"
  ],
  "devDependencies": {
    "@types/change-case": "^2.3.1",
    "@types/columnify": "^1.5.1",
    "@types/ejs": "^3.1.1",
    "@types/eslint": "8.21.0",
    "@types/inquirer": "^9.0.3",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.19",
    "@types/prettier": "^2.7.2",
    "@types/xml2js": "^0.4.11",
    "@types/yargs": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "colorette": "^2.0.19",
    "columnify": "^1.6.0",
    "cosmiconfig": "^8.0.0",
    "ejs": "^3.1.8",
    "events": "^3.3.0",
    "get-tsconfig": "^4.4.0",
    "globby": "^13.1.3",
    "inquirer": "^9.1.4",
    "lodash": "^4.17.21",
    "prettier": "^2.8.3",
    "tiny-glob": "^0.2.9",
    "xml2js": "^0.4.23",
    "yargs": "^17.6.2"
  }
}
