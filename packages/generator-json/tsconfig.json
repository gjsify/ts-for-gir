{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"target": "es2022",
		"module": "esnext",
		"moduleResolution": "bundler",
		"lib": ["es2022", "dom"],
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": false
	},
	"include": ["src/**/*"]
}
