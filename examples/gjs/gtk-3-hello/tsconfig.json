{
  "compilerOptions": {   
    "lib": ["ESNext"],
    "types": ["@girs/gjs"],
    "typeRoots": ["./@types"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
  },
  "files": [
    "main.ts"
  ]
}
